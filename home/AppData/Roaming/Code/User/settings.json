{
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "chat.mcp.serverSampling": {
        "Global in Code: context7": {
            "allowedModels": [
                "copilot/gpt-4.1"
            ]
        }
    },
    "csharp.experimental.debug.hotReload": true,
    "csharp.inlayHints.enableInlayHintsForImplicitObjectCreation": true,
    "csharp.inlayHints.enableInlayHintsForImplicitVariableTypes": true,
    "csharp.inlayHints.enableInlayHintsForLambdaParameterTypes": true,
    "csharp.inlayHints.enableInlayHintsForTypes": true,
    "dev.containers.copyGitConfig": false,
    "dev.containers.defaultExtensions": [
        "eamodio.gitlens",
        "ms-dotnettools.vscodeintellicode-csharp",
        "ms-ossdata.vscode-pgsql",
        "shardulm94.trailing-spaces",
        "volkerdobler.insertnums"
    ],
    "diffEditor.ignoreTrimWhitespace": false,
    "dotfiles.installCommand": "install-devcontainer.sh",
    "dotfiles.repository": "bijancamp/dotfiles",
    "dotfiles.targetPath": "~/.local/share/chezmoi",
    "dotnet.inlayHints.enableInlayHintsForIndexerParameters": true,
    "dotnet.inlayHints.enableInlayHintsForLiteralParameters": true,
    "dotnet.inlayHints.enableInlayHintsForObjectCreationParameters": true,
    "dotnet.inlayHints.enableInlayHintsForOtherParameters": true,
    "dotnet.inlayHints.enableInlayHintsForParameters": true,
    "editor.inlineSuggest.enabled": true,
    "editor.renderWhitespace": "boundary",
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "git.inputValidation": true,
    "git.path": "C:\\Program Files\\Git\\bin\\git.exe",
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false
    },
    "gitlens.currentLine.enabled": false,
    "github.copilot.nextEditSuggestions.enabled": true,
    "plantuml.render": "PlantUMLServer",
    "plantuml.server": "https://www.plantuml.com/plantuml",
    "remote.autoForwardPortsSource": "hybrid",
    "sonarlint.automaticAnalysis": true,
    "specstory.autoSave.enabled": false,
    "specstory.cloudSync.enabled": "never",
    "specstory.derivedRules.enabled": false,
    "specstory.helpUsImprove": false,
    "telemetry.telemetryLevel": "off",
    "terminal.external.windowsExec": "wt.exe",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "trailing-spaces.highlightCurrentLine": false,
    "window.restoreWindows": "none",
    "window.zoomLevel": 0,
    "workbench.startupEditor": "none"
}
