gui:
  theme:
{{ template "lazygit_config_gui_theme.yml" . }}

{{ template "lazygit_config_global.yml" . }}

{{ if eq .host.purpose "work" }}
customCommands:
  - key: '<c-b>'
    context: 'localBranches'
    command: 'bash -c "git fetch origin && git switch -c {{ "{{" }} .Form.BranchName {{ "}}" }} origin/develop"'
    description: 'Create new feature branch from latest origin/develop'
    loadingText: 'Creating new feature branch from latest origin/develop...'
    prompts:
      - type: 'input'
        key: 'BranchName'
        title: "Branch Name:"
        initialValue: "feature/"
  - key: '<c-r>'
    context: 'localBranches'
    command: 'git pull --rebase origin develop'
    description: 'Rebase onto latest origin/develop'
    loadingText: 'Rebasing onto latest origin/develop...'
{{ end }}

keybinding:
  universal:
{{ template "lazygit_config_keybinding_universal.yml" . }}
