[include]
	path = .gitconfig.default

[includeIf "gitdir:C:/"]
	path = .gitconfig.windows

[includeIf "gitdir:/workspaces"]
	path = .gitconfig.devcontainer

[includeIf "gitdir:ADO/"]
	path = .gitconfig.ado

[includeIf "gitdir:GH/"]
	path = .gitconfig.gh

[core]
	autocrlf = true
	editor = code --wait

[init]
	defaultBranch = main
